<div class="container-fluid" style="padding:0; margin:0">
  <div class="row">
    <div class="col-md-9">
      <div id="map" style="width:100%; height: 95vh;"></div>
    </div>
    <div class="col-md-3">
      <h5>Mission {{missionID}} Status</h5>
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center" style="color: #fff;" id="gpsLockIndicator">
          GPS Lock
          <span class="badge"><i id="gpsLockIcon" class="fas fa-question"></i></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center" style="color: #fff;">
          Altitude (m)
          <span class="text" id="altitudeIndicator">&mdash;</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center" style="color: #fff;">
          Vertical Vel. (m/s)
          <span class="text" id="verticalVelocityIndicator"></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center" style="color: #fff;">
          Heading (&deg;)
          <span class="text" id="headingIndicator"></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center" style="color: #fff;">
          External Temp. (&deg;C)
          <span class="text" id="extTempIndicator"></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center" style="color: #fff;">
          Command Voltage (V)
          <span class="text" id="cmdVoltageIndicator"></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center" style="color: #fff;">
          Last Updated
          <span class="text" id="lastUpdateIndicator"></span>
        </li>
      </ul>
      <hr>
      <div class="card text-white bg-secondary mb-3">
        <div class="card-header">
          Controls
        </div>
        <div class="card-body form-horizontal">
          <div class="row">
            <div class="card-text">Pan to: &nbsp;
              <button class="btn btn-primary btn-sm" onclick="panToBalloon()">balloon</button>
              &nbsp;
              <button class="btn btn-primary btn-sm" onclick="panToMe()">me</button>
            </div>
          </div>
        </div>
      </div>
      <div class="card text-white bg-secondary mb-3">
        <div class="card-header">
          Options
        </div>
        <div class="card-body form-horizontal">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="enablePingCheck">
            <label class="form-check-label" for="enablePingCheck">
              Audio "ping" on update
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="trackMeCheck">
            <label class="form-check-label" for="trackMeCheck">
              Track my path
            </label>
          </div>
        </div>
      </div>
        <button class="btn btn-primary" onclick="getMyLocation()">Show me</button>
    </div>
  </div>
</div>
<script>
  const missionID = {{missionID}};
</script>
