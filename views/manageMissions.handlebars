<div class="card text-white bg-secondary mb-3">
  <div class="card-header">
    <h3 class="card-title">
      Manage Mission
    </h3>
  </div>
  <form method="post" action="/modifyMission">
    <div class="card-body form-horizontal">
      <div class="col-md-12">
        <table id="missionTable" class="display table-hover" style="width: 100%">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Status</th>
              <th scope="col">Organization</th>
              <th scope="col">Date</th>
              <th scope="col">Description</th>
              <th scope="col">Created By</th>
              <th scope="col">Launch Code</th>
            </tr>
          </thead>
          <tbody>
            <div class="form-group">
              {{#each missions}}
                  <tr id={{_id}}>
                    <td>{{missionID}}</td>
                    <td>{{status}}</td>
                    <td>{{orgName}}</td>
                    <td>{{formattedLaunchDate}}</td>
                    <td>{{description}}</td>
                    <td>{{createdByName}}</td>
                    <td>{{launchCode}}</td>
                  </tr>
              {{/each}}
            </div>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer form-horizontal">
      <div class="form-group col-md-12">
        <input class="form-control" type="text" id="selectedMission" name="selectedMission" hidden>
      </div>
      <div class="form-group col-md-12 row">
        <div class="col-md-6">
          <label for="missionActionSelect">Action</label>
          <select class="form-control" id="missionActionSelect" name="missionActionSelect">
            <option>None</option>
            <option>Change status</option>
            <option>Change description</option>
            <option>Change organization</option>
            <option>Change planned launch date</option>
            <option>Remove waypoints</option>
            <option>Delete mission</option>
          </select>
        </div>
        <div class="col-md-6" id="modify-status">
          <label for="statusSelect">Status</label>
          <select class="form-control" id="statusSelect" name="statusSelect">
            <option>planned</option>
            <option>active</option>
            <option>archived</option>
          </select>
        </div>
        <div class="col-md-6" id="modify-organization">
          <label class="control-label" for="organization">Organization</label>
          <select class="form-control" name="organization">
            <option selected>Select...</option>
            {{#each organizations}}
              <option value="{{_id}}">{{name}} ({{city}}, {{state}})</option>
            {{/each}}
          </select>
        </div>
        <div class="col-md-6" id="modify-description">
          <label class="control-label" for="description">Description (50 character maximum)</label>
          <input class="form-control" type="text" name="description" autocomplete="off" maxlength="50">
        </div>

        <div class="form-group col-md-6" id="modify-launch-date">
          <label class="control-label" for="predictedLaunchDate">Launch date (planned)</label>
          <div class="input-group date">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
            </div>
            <input type="text" class="form-control" name="predictedLaunchDate" autocomplete="off">
          </div>
        </div>
      </div>
      <div class="form-group col-md-12 row align-items-end" id="modifyMissionButtons">
        <div class="col-md-6">
          <label for="confirmAction">Confirm action by entering launch code</label>
          <input class="form-control" type="text" name="confirmAction" autocomplete="off" required>
        </div>
        <div class="col-md-6 text-right">
          <button type="submit" class="btn btn-success btn-default">OK</button> &nbsp;
          <a href="/"><button type="button" class="btn btn-danger">
            <i class="fas fa-times"></i></button></a>
        </div>
      </div>
    </div>
  </form>
</div>
