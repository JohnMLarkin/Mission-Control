<div class="card text-white bg-secondary mb-3">
  <div class="card-header">
    <h3 class="card-title">
      Manage User
    </h3>
  </div>
  <form method="post" action="/modifyUser">
    <div class="card-body form-horizontal">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
          </tr>
        </thead>
        <tbody>
          <div class="form-group">
            {{#each accounts}}
                <tr>
                  <td><div class="form-check">
                    <input class="form-check-input" type="radio" name="userList" id="{{username}}Radio" value="{{username}}" required>
                    <label class="form-check-label" for="{{username}}Radio">{{username}}</label>
                  </div></td>
                  <td>{{email}}</td>
                  <td>{{role}}</td>
                </tr>
            {{/each}}
          </div>
        </tbody>
      </table>
    </div>
    <div class="card-footer form-horizontal">
      <div class="form-group col-md-12 row">
        <div class="col-md-6">
          <label for="userActionSelect">Action</label>
          <select class="form-control" id="userActionSelect" name="userActionSelect">
            <option>None</option>
            <option>Change role</option>
            <option>Delete user</option>
          </select>
        </div>
        <div class="col-md-6" id="modify-role">
          <label for="roleSelect">Role</label>
          <select class="form-control" id="roleSelect" name="roleSelect">
            <option>standard</option>
            <option>flightdirector</option>
            <option>admin</option>
          </select>
        </div>
        <div class="col-md-6" id="delete-user">
          <label for="confirmDelete">Confirm deletion by entering username</label>
          <input class="form-control" type="text" name="confirmDelete">
        </div>
      </div>
      <div class="form-group col-md-12" id="modifyUserButtons">
        <div class="col-md-12 text-right">
          <button type="submit" class="btn btn-success btn-default">
            <i class="fa fa-user-cog"></i> &nbsp; <strong>OK</strong>
          </button> &nbsp;
          <a href="/"><button type="button" class="btn btn-danger">
            <i class="fas fa-times"></i></button></a>
        </div>
      </div>
    </div>
  </form>
</div>
